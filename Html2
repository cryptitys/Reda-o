    document.getElementById("ra").addEventListener("input", () => {
      spinner.style.display = "inline-block";
      statusText.textContent = "Verificando...";
      setTimeout(() => {
        spinner.style.display = "none";
        statusText.textContent = "Verificado âœ”";
